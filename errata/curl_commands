# AJAX:
curl --header "Content-Type: application/json" --request POST --data '{"payment_type_id": 1, "amount": 100}' -i localhost:3000/ajax/payments

# PLAIN:
curl -i localhost:3000/plain_payment_types
curl --header "Content-Type: application/json" --request POST --data '{"Payment_Type_Id": "1", "Amount": "100"}' -i localhost:3000/plain_add_payment
